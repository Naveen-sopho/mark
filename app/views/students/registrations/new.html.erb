<div class="container" style="padding-right: 6px;
padding-bottom: 3px;">
<div class="devise_error_messages" style="
    position:  absolute;
    bottom: 0;
    right: 0;
    background: rgba(243,223,222,1);
    padding: 10px;
    color: red;">
  <%= devise_error_messages! %>
</div>
<div class = "row">
  <div class = "col-md-4">
  </div>
   <div class = "col-md-4">
    <div class ="panel panel-primary">
      <div class = "panel-heading">Sign up </div>
      <div class = "panel-body">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  
  <div class="field">
    <%= f.label :Full_Name %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "name" ,:size =>"40"%>
  </div>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" ,:size =>"40"%>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off" ,:size =>"40"%>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" ,:size =>"40"%>
  </div><br/>

  <div class="actions">
    <%= f.submit "Sign up", class: "btn btn-success"%>
  </div>
<% end %>

<%= render "students/shared/links" %>
</div>
</div>
</div>
</div>
 <div class = "col-md-4">
  </div>
</div>
